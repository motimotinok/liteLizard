{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://litelizard.app/schema/document-v1.json",
  "title": "LiteLizard Document v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "documentId",
    "title",
    "personaMode",
    "createdAt",
    "updatedAt",
    "paragraphs"
  ],
  "properties": {
    "version": {
      "const": 1
    },
    "documentId": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]{6,64}$"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200
    },
    "personaMode": {
      "type": "string",
      "enum": ["friendly", "editor", "general-reader"]
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time"
    },
    "source": {
      "type": "object",
      "additionalProperties": false,
      "required": ["format"],
      "properties": {
        "format": {
          "type": "string",
          "enum": ["litelizard-json"]
        },
        "originPath": {
          "type": "string",
          "maxLength": 4096
        }
      }
    },
    "paragraphs": {
      "type": "array",
      "minItems": 1,
      "maxItems": 2000,
      "items": {
        "$ref": "#/$defs/paragraph"
      }
    },
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "tags": {
          "type": "array",
          "maxItems": 30,
          "items": {
            "type": "string",
            "maxLength": 40
          }
        }
      }
    }
  },
  "$defs": {
    "paragraph": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "order",
        "light",
        "lizard"
      ],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^p_[a-zA-Z0-9]{6,32}$"
        },
        "order": {
          "type": "integer",
          "minimum": 1
        },
        "light": {
          "$ref": "#/$defs/light"
        },
        "lizard": {
          "$ref": "#/$defs/lizard"
        }
      }
    },
    "light": {
      "type": "object",
      "additionalProperties": false,
      "required": ["text"],
      "properties": {
        "text": {
          "type": "string",
          "minLength": 1,
          "maxLength": 10000
        },
        "charCount": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "lizard": {
      "type": "object",
      "additionalProperties": false,
      "required": ["status"],
      "properties": {
        "status": {
          "type": "string",
          "enum": ["pending", "complete", "failed", "stale"]
        },
        "emotion": {
          "type": "array",
          "maxItems": 8,
          "items": {
            "type": "string",
            "maxLength": 50
          }
        },
        "theme": {
          "type": "array",
          "maxItems": 8,
          "items": {
            "type": "string",
            "maxLength": 80
          }
        },
        "deepMeaning": {
          "type": "string",
          "maxLength": 1000
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "model": {
          "type": "string",
          "maxLength": 120
        },
        "requestId": {
          "type": "string",
          "maxLength": 120
        },
        "analyzedAt": {
          "type": "string",
          "format": "date-time"
        },
        "error": {
          "type": "object",
          "additionalProperties": false,
          "required": ["code", "message"],
          "properties": {
            "code": {
              "type": "string",
              "maxLength": 50
            },
            "message": {
              "type": "string",
              "maxLength": 300
            }
          }
        }
      }
    }
  }
}
